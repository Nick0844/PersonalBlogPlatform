@model PersonalBlogPlatform.ViewModels.BlogPostViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2 class="mb-4">Edit Post</h2>
        
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Summary" class="form-label"></label>
                <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="FeaturedImageUrl" class="form-label"></label>
                <input asp-for="FeaturedImageUrl" class="form-control" />
                <span asp-validation-for="FeaturedImageUrl" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="TagsInput" class="form-label"></label>
                    <input asp-for="TagsInput" class="form-control" />
                    <small class="form-text text-muted">Separate tags with commas</small>
                </div>
            </div>
            
            <div class="mb-3 form-check">
                <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                <label asp-for="IsPublished" class="form-check-label">Published</label>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
